@using OnlineWebShop.Models
@using PagedList.Mvc;
@model PagedList.PagedList<OnlineWebShop.Models.Producer>
@{
    ViewBag.Title = "DeletedProducer";
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
}

<div class="col-md-12">
    <div class="col-md-3">
        <div class="search-bar">
            <form action="@Url.Action("SearchProducers", "Modules")" method="get">
                <input type="text" placeholder="Nhập từ khóa" name="searchString" id="searchString">
                <input type="submit" value="">
            </form>
        </div>
    </div>
</div>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Mã số</th>
            <th>Tên nhà sản xuất</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr>
                <td>@item.ProducerID</td>
                <td>@item.Name</td>
                <td>
                    <a href=" @Url.Action("RestoreProducer", "Garbage", new { id = item.ProducerID })"><button type="button" class="btn btn-success">Phục hồi</button></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div style="text-align:center">@Html.PagedListPager(Model, page => Url.Action("DeletedProducer", "Garbage", new { page = page }))</div>

