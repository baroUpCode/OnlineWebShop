@using OnlineWebShop.Models
@using PagedList.Mvc;
@model PagedList.PagedList<OnlineWebShop.Models.Order>
@{
    ViewBag.Title = "DeletedOrder";
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
}
<div class="col-md-12">
    <div class="col-md-3">
        <div class="search-bar">
            <form action="@Url.Action("SearchOrders", "Modules")" method="get">
                <input type="text" placeholder="Nhập từ khóa" name="searchString" id="searchString">
                <input type="submit" value="">
            </form>
        </div>
    </div>
</div>
<div class="col-md-12">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>Mã hóa đơn</th>
                <th>Ngày giao</th>
                <th>Tình trạng</th>
                <th>Tên người nhận</th>
                <th>Địa chỉ</th>
                <th>Số điện thoại</th>
                <th>Tổng tiền</th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.OrderID</td>
                    <td>@item.DeliveryDate.ToString()</td>
                    @*<td style="max-width:100ch; overflow:hidden; white-space:nowrap;text-overflow:ellipsis" width="100px">@item.Description</td>*@
                    <td>
                        @if (item.Status == 1)
                        {
                            <h4>Đã giao</h4>
                        }
                        else if (item.Status == 0)
                        {
                            <h4>Đang xử lý</h4>
                        }
                    </td>
                    <td>@item.Reciever.RecieverName</td>
                    <td>@item.Reciever.Address</td>
                    <td>@item.Reciever.Phone</td>
                    <td><span>@String.Format("{0:0,0}", item.Total) VND</span></td>
                    <td>
                        <a href=" @Url.Action("RestoreOrder", "Garbage", new { id = item.OrderID })"><button type="button" class="btn btn-success">Phục hồi</button></a>
                        <a href=" @Url.Action("DeleteOrders", "Garbage", new { id = item.OrderID })"><button type="button" class="btn btn-danger" onclick="somethinginjquery">Xóa khỏi dữ liệu</button></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div style="text-align:center">@Html.PagedListPager(Model, page => Url.Action("DeletedOrder", "Garbage", new { page = page }))</div>
