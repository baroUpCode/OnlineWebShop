<div id="page-wrapper">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>Mã số</th>
                <th>Hình ảnh</th>
                <th>Tên sản phẩm</th>
                <th>Mô tả</th>
                <th>Loại sản phẩm</th>
                <th>Nhà sản xuất</th>
                <th>Thời gian bảo hành</th>
                <th>Số lượng còn lại</th>
                <th>Giá</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductID</td>
                    <td class="wh180"><img src="~/Assets/images/@item.ProductImages" /></td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Catogory.CatogoriesName</td>
                    <td>@item.Producer.Name</td>
                    <td>@item.Warranty</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price</td>
                    <td><a href=" @Url.Action("EditProduct","Modules",new {id=item.ProductID })"><button type="button" class="btn btn-warning">Sửa</button></a> | <a href=" @Url.Action("DeleteProduct","Modules",new {id=item.ProductID })"><button type="button" class="btn btn-danger">Xóa</button></a></td>
                </tr>
            }
        </tbody>
    </table>
    <div style="text-align:center">@Html.PagedListPager(Model, page => Url.Action("Products","Modules", new { page = page }))</div>
    </div>
