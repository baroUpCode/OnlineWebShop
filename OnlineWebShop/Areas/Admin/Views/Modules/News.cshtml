@using OnlineWebShop.Models
@using PagedList.Mvc;
@model PagedList.PagedList<OnlineWebShop.Models.New>
@{
    ViewBag.Title = "News";
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
}
<div id="page-wrapper">
    <div class="col-md-12">
        <div class="col-md-3">
            <div class="search-bar">
                @using (Html.BeginForm("SearchingNews", "Modules", FormMethod.Post))
                {
                    <input type="text" placeholder="Nhập từ khóa" name="searchString" id="searchString">
                    <input type="submit" value="">
                }
            </div>
        </div>
        <div class="col-md-4">
            <button class="btn-success"><a href="@Url.Action("InsertNews","Modules")">Thêm Mới</a></button>
        </div>
    </div>
    <div class="col-md-12">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th>Mã tin</th>
                    <th>Ảnh bìa</th>
                    <th>Tiêu đề</th>
                    <th>Mô tả</th>
                    <th>Loại tin</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>@item.NewsID</td>
                        <td class="wh180"><img src="~/Assets/images/@item.Images" style="width:200px;height:200px" /></td>
                        <td>@item.Title</td>
                        <td style="max-width:60ch; overflow:hidden; white-space:nowrap;text-overflow:ellipsis" width="80px">@item.Content</td>
                        <td>@item.RootCatogory.RootCatogoryName</td>
                         <td><a href=" @Url.Action("EditNews","Modules",new {id=item.NewsID })"><button type="button" class="btn btn-warning">Sửa</button></a>|<a href=" @Url.Action("DeleteNews","Modules",new {id=item.NewsID })"><button type="button" class="btn btn-danger">Xóa</button></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div style="text-align:center">@Html.PagedListPager(Model, page => Url.Action("News", "Modules", new { page = page }))</div>
    </div>
</div>




