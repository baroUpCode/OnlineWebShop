                    <input type="text" name="email" placeholder="Email" id="email[1]" aria-required="true" class="input"></input>
                </label>
                    <input type="submit" class="btn_login" value="Đăng nhập">
                     <p>Chưa có tài khoản thì bấm vô <a href="@Url.Action("Register", "User")" class="link_signup link_modal_signup">Đăng Ký</a></p>
            }
        </div>
    </div>
</div>

