@model IEnumerable<OnlineWebShop.Models.Catogory>
@{
    ViewBag.Title = "Catogories";
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div class="col-md-12">
        <div class="col-md-3">
            <div class="search-bar">
                @using (Html.BeginForm("SearchingCatogories", "Modules", FormMethod.Post))
                {
                    <input type="text" placeholder="Nhập từ khóa" name="searchString" id="searchString">
                    <input type="submit" value="">
                }
            </div>
        </div>
        <div class="col-md-4">
            <button class="btn-success"><a href="@Url.Action("InsertCatogories","Modules")">Thêm Mới</a></button>
        </div>
    </div>
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>Mã số</th>
                <th>Tên loại</th>
                <th>Loại sản phẩm</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CatogoriesID</td>
                    <td>@item.CatogoriesName</td>
                    <td>@item.RootCatogory.RootCatogoryName</td>
                    <td><button type="button" class="btn btn-warning"><a href=" @Url.Action("EditCatogories","Modules",new {id=item.CatogoriesID })">Sửa</a></button>
                    <button type="button" class="btn btn-danger"><a href=" @Url.Action("DeleteCatogories","Modules",new {id=item.CatogoriesID })">Xóa</a></button></td>
                </tr>
            }
        </tbody>
    </table>
</div>


