@model OnlineWebShop.Models.New
@{
    ViewBag.Title = "InsertNews";
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
}
    <div class="modal_outside_login" id="modal">
        <div class="border_modal_login">
            <div class="modal_contain_login">
                @using (Html.BeginForm("InsertNews", "Modules", FormMethod.Post))
                {
                    @Html.ValidationSummary(true)
                    <h1>
                        <span class="text_login">Thêm tin tức </span>
                    </h1>
                    <label class="email_group">
                        <h5>Ảnh bìa</h5>
                        <div class="img" style="width: 500px; height: 500px;">
                            <h5></h5>
                        </div>
                        <input type="file" name="newsImage"/>
                        <h5>Tiêu đề tin:</h5>
                        <input type="text" name="newsTitle" aria-required="true" id="pwd[1]" required class="input" />
                        <h5>Loại tin:</h5>
                        @Html.DropDownList("newsRootCat", (IEnumerable<SelectListItem>)ViewBag.RootCat, new { @class = "form-control" })
                        <!--CKEDITOR-->
                        <h5>Nội dung:</h5>
                        <textarea name="newsContent" id="content" rows="10" cols="80"></textarea>
                        <script type="text/javascript">
                            CKEDITOR.replace('content');
                        </script>
                    </label>
                    <div class="address new">
                        <input type="submit" value="Thêm mới">
                    </div>
                }
                <div><a href="@Url.Action("News","Modules")">Trở về trang trước</a></div>
            </div>
        </div>
    </div>