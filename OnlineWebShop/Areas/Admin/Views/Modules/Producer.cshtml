@model IEnumerable<OnlineWebShop.Models.Producer>
@{
    ViewBag.Title = "Producer";
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div class="col-md-12">
        <div class="col-md-3">
            <div class="search-bar">
                @using (Html.BeginForm("SearchingProducer", "Modules", FormMethod.Post))
                {
                    <input type="text" placeholder="Nhập từ khóa" name="searchString" id="searchString">
                    <input type="submit" value="">
                }
            </div>
        </div>
        <div class="col-md-4">
            <button class="btn-success"><a href="@Url.Action("InsertProduct","Modules")">Thêm Mới</a></button>
        </div>
    </div>
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>Mã số</th>
                <th>Tên nhà sản xuất</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProducerID</td>
                    <td>@item.Name</td>
                    <td><button type="button" class="btn btn-warning"><a href=" @Url.Action("EditProducer","Modules",new {id=item.ProducerID })">Sửa</a></button>
                    <button type="button" class="btn btn-danger"><a href=" @Url.Action("DeleteProducer","Modules",new {id=item.ProducerID })">Xóa</a></button></td>
                </tr>
            }
        </tbody>
    </table>
</div>

