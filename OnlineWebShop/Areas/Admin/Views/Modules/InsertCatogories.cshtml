@model OnlineWebShop.Models.Catogory
@{
    ViewBag.Title = "InsertCatogories";
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div class="modal_outside_login" id="modal">
        <div class="border_modal_login">
            <div class="modal_contain_login">
                @using (Html.BeginForm("InsertCatogories", "Modules", FormMethod.Post))
                {
                    @Html.ValidationSummary(true)
                    <h1>
                        <span class="text_login">Thông tin thêm mới</span>
                    </h1>
                    <label class="email_group">
                        <h5>Tên loại</h5>
                        <input type="text" name="catName" id="email[1]" required aria-required="true" class="input" />
                        <h5>Loại</h5>
                        @Html.DropDownList("catRoot", (IEnumerable<SelectListItem>)ViewBag.CatList, new { @class = "form-control" })
                    </label>
                    <input type="submit" value="Thêm mới">
                }
                <div><a href="@Url.Action("Catogories","Modules")">Back To Product List</a></div>
            </div>
        </div>
    </div>
</div>

