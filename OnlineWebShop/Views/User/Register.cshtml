
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="breadcrumbs">
    <div class="container">
        <div class="breadcrumbs-main">
            <ol class="breadcrumb">
                <li><a href="@Url.Action("Index","Home")">Home</a></li>
                <li class="active">Account</li>
            </ol>
        </div>
    </div>
</div>
<!--end-breadcrumbs-->
<!--start-account-->
<div class="account">
    <div class="container">
        <div class="account-bottom">
            <div class="col-md-6 account-left">
                    <div class="account-top heading">
                        <h3>Đăng Ký Thành Viên</h3>
                    </div>
@using (Html.BeginForm("Register", "User", FormMethod.Post))
{
    @Html.ValidationSummary(true)
                    <div class="address" >
                        <span>Họ và tên</span>
                        <input type="text" name="Name" required title="Vui lòng nhập họ và tên" pattern=".{4,}">
                    </div>
                    <div class="address">
                        <span>Email</span>
                        <input type="email" name="Email"  required  max="100" >
                    </div>
                    <div class="address">
                        <span>Địa chỉ</span>
                        <input type="text" name="Address" required>
                    </div>
                    <div class="address">
                        <span>Điện thoại</span>
                        <!--thong tin form Phone co kieu mau pattern la so tu 0->9, it nhat 10 va nhieu nhat 12 so-->
                        <input type="tel" name="Phone"  min="9" required  pattern="[0-9]{10,12}" title="Vui lòng nhập đúng số điện thoại" >
                    </div>
                    <div class="address">
                        <span>Ngày sinh</span>
                        <input type="date" name="BirthDay" required >
                    </div>
                    <div class="address">
                        <span>Mật khẩu</span>
                        <!--form password yeu cau phai nhap it nhat 6 ky tu giong nhu mau pattern-->
                        <input type="password" name="Pass" required pattern=".{6,}" title="Mật khẩu phải có ít nhất 6 ký tự">
                    </div>
                    @*<div class="address">
                        <span> Xác nhận mật khẩu</span>
                        <input type="password" name="Passconfirm" required  >
                    </div>*@
                    <div class="address new">
                        <input type="submit" value="submit">
                    </div>
}
            </div>
            @*div class="col-md-6 account-left">
                <form>
                    <div class="account-top heading">
                        <h3>REGISTERED CUSTOMERS</h3>
                    </div>
                    <div class="address">
                        <span>Email Address</span>
                        <input type="text">
                    </div>
                    <div class="address">
                        <span>Password</span>
                        <input type="text">
                    </div>
                    <div class="address">
                        <a class="forgot" href="#">Forgot Your Password?</a>
                        <input type="submit" value="Login">
                    </div>
                </form>
            </div>*@
            @*Html.Action("PartialLogin", "User")*@
            <div class="clearfix"> </div>
        </div>
    </div>
</div>



